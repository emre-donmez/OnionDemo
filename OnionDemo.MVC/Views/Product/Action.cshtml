@model OnionDemo.MVC.Models.ProductViewModel
@{
    string dmlType = Model.Id == Guid.Empty ? "C" : "U";
}
<h1> @(dmlType == "U" ? "Update" : "Create")</h1>

<hr />
<div class="row">
    <div class="col-md-4">        
        <form asp-action="Action">
            <input hidden name="Id" value="@Model.Id"/>
            <input hidden name="Created" value="@Model.Created" />
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" value="@Model.CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" value="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" value="@Model.Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" value="@Model.Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>            
         
            <div class="form-group">
                <input type="submit" value="@(dmlType == "U" ? "Update" : "Create")" class="btn btn-primary my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
